@model DatePickerHint.Models.Student

<h1>Are you sure you want to delete this student?</h1>

<div>
    <strong>First Name:</strong> @Model.FirstName <br />
    <strong>Last Name:</strong> @Model.LastName <br />
    <strong>Date of Birth:</strong> @Model.DOB.ToString("yyyy-MM-dd") <br />
    <strong>GPA:</strong> @Model.GPA <br />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Cancel</a>
</form>
