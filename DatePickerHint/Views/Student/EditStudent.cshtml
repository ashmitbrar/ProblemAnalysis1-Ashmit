@model DatePickerHint.Models.Student

<h1>Edit Student</h1>

<form asp-action="Edit" asp-route-id="@Model.StudentId" method="post">


    <input type="hidden" asp-for="StudentId" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form-control" type="date" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GPA"></label>
        <input asp-for="GPA" class="form-control" />
        <span asp-validation-for="GPA" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="ProgramCode"></label>
        <select asp-for="ProgramCode" class="form-control" 
                asp-items="ViewBag.Programs">
            <option value="">-- Select Program --</option>
        </select>
        <span asp-validation-for="ProgramCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

